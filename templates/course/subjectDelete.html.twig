{% extends '/layout.html.twig' %}

{% block content %}
    <h1>Eliminar módulo</h1>
    <div class="alert alert-danger">
        El módulo {{ subject.name}} será eliminado de la aplicación.
        La operación no se puede deshacer.
    </div>
    <form method="post">
        <a href="{{ path('listSubjects') }}" class="btn btn-info">Volver al listado</a>
        <button type="submit" name="confirmar" class="btn btn-danger">Confirmar
            eliminación</button>
    </form>
{% endblock %}

