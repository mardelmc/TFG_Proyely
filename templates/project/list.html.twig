{% extends 'layout.html.twig' %}

{% block title %}Lista de proyectos{{ parent() }}{% endblock %}
{% block content %}

    <h1>Proyectos</h1>

        <a href={{ path('project_new') }}>Crear Nuevo Proyecto</a>

    <table class="table table-bordered table-hover table-stripped">
        <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th>Asignado a</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
            {% for project in projects %}
                <tr>
                    <td>{{ project.name }}</td>
                    <td>{{ project.description }}</td>
                    <td>{{ project.student}}</td>
                    <th><a href=""><i class="fa-solid fa-pencil"></i></a></th>
                    <th><a href="{{ path('project_delete', {'id': project.id }) }}"><i class="fa-solid fa-trash-can"></i></a></th>

                </tr>
            {% else %}
                <tr>
                    <td colspan="3">No hay proyectos</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
